REM generated from msft_ros_env/env-hooks/vcpkg.bat.in
@echo off

:: initialize Vcpkg environments
set VCPKG_ROOT=c:\opt\ros\foxy\x64\tools\vcpkg
set VCPKG_DEFAULT_TRIPLET=x64-windows

:: add Vcpkg.exe to PATH
set PATH=%PATH:C:\opt\ros\foxy\x64\tools\vcpkg;=%
set "PATH=C:\opt\ros\foxy\x64\tools\vcpkg;%PATH%"

:: add the installed bin to PATH
set PATH=%PATH:C:\opt\ros\foxy\x64\tools\vcpkg\installed\x64-windows\bin;=%
set "PATH=C:\opt\ros\foxy\x64\tools\vcpkg\installed\x64-windows\bin;%PATH%"

:: add the installed root for CMake
set CMAKE_PREFIX_PATH=%CMAKE_PREFIX_PATH:C:\opt\ros\foxy\x64\tools\vcpkg\installed\x64-windows;=%
set "CMAKE_PREFIX_PATH=C:\opt\ros\foxy\x64\tools\vcpkg\installed\x64-windows;%CMAKE_PREFIX_PATH%"

:: create this folder to prevent this warning if vcpkg isn't used:
:: WARNING The path 'C:\opt\ros\foxy\x64\tools\vcpkg\installed\x64-windows' in the environment variable CMAKE_PREFIX_PATH doesn't exist
if not exist C:\opt\ros\foxy\x64\tools\vcpkg\installed\x64-windows mkdir C:\opt\ros\foxy\x64\tools\vcpkg\installed\x64-windows > nul
